<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/drawer"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<FrameLayout
		android:id="@+id/content"
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<LinearLayout
			android:background="?android:attr/colorBackground"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:background="?android:attr/colorBackground"
				android:elevation="2dp"
				android:gravity="center_vertical"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:padding="10dp">

				<ImageButton
					android:id="@+id/btn_menu"
					style="@style/ToolbarButtonStyle"
					android:src="@drawable/menu" />

				<TextView
					android:id="@+id/title"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:text="Home"
					android:textColor="?attr/colorOnSurface"
					android:textSize="18sp" />


			</LinearLayout>

			<ListView
				android:divider="@null"
				android:id="@+id/list_projects"
				android:layout_height="match_parent"
				android:layout_width="match_parent" />


		</LinearLayout>

		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/fab"
			android:layout_gravity="right|bottom"
			android:layout_height="wrap_content"
			android:layout_margin="20dp"
			android:layout_width="wrap_content"
			android:src="@drawable/plus" />


	</FrameLayout>

	<LinearLayout
		android:background="?attr/colorSurface"
		android:layout_gravity="start"
		android:layout_height="match_parent"
		android:layout_width="180dp"
		android:orientation="vertical">

		<LinearLayout
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_height="wrap_content"
				android:layout_marginBottom="5dp"
				android:layout_width="wrap_content"
				android:text="@string/app_name"
				android:textColor="?attr/colorOnSurface"
				android:textSize="25sp"
				android:textStyle="bold" />

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="Create awesome UI!"
				android:textColor="?attr/colorOnSurface"
				android:textSize="12sp" />


		</LinearLayout>

		<LinearLayout
			android:gravity="bottom|right"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:background="@drawable/drawer_home_selected_item"
				android:clickable="true"
				android:gravity="center_vertical"
				android:id="@+id/btn_home"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout_width="140dp"
				android:orientation="horizontal"
				android:padding="12dp">

				<ImageView
					android:layout_height="20dp"
					android:layout_width="20dp"
					android:src="@drawable/home"
					android:tint="?attr/colorOnSurface" />

				<TextView
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:text="Home"
					android:textColor="?attr/colorOnSurface"
					android:textSize="16sp" />


			</LinearLayout>

			<LinearLayout
				android:background="@drawable/drawer_home_unselected_item"
				android:gravity="center_vertical"
				android:id="@+id/btn_settings"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout_width="140dp"
				android:orientation="horizontal"
				android:padding="12dp">

				<ImageView
					android:layout_height="20dp"
					android:layout_width="20dp"
					android:src="@drawable/settings"
					android:tint="?attr/colorOnSurface" />

				<TextView
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:text="Settings"
					android:textColor="?attr/colorOnSurface"
					android:textSize="16sp" />


			</LinearLayout>

			<LinearLayout
				android:background="@drawable/drawer_home_unselected_item"
				android:gravity="center_vertical"
				android:id="@+id/btn_git"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout_width="140dp"
				android:orientation="horizontal"
				android:padding="12dp">

				<ImageView
					android:layout_height="20dp"
					android:layout_width="20dp"
					android:src="@drawable/github"
					android:tint="?attr/colorOnSurface" />

				<TextView
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:text="GitHub"
					android:textColor="?attr/colorOnSurface"
					android:textSize="16sp" />


			</LinearLayout>

			<LinearLayout
				android:background="@drawable/drawer_home_unselected_item"
				android:gravity="center_vertical"
				android:id="@+id/btn_about"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout_width="140dp"
				android:orientation="horizontal"
				android:padding="12dp">

				<ImageView
					android:layout_height="20dp"
					android:layout_width="20dp"
					android:src="@drawable/info"
					android:tint="?attr/colorOnSurface" />

				<TextView
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_width="wrap_content"
					android:text="About"
					android:textColor="?attr/colorOnSurface"
					android:textSize="16sp" />


			</LinearLayout>


		</LinearLayout>


	</LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
